{
    "editor.defaultFormatter": "ms-python.black-formatter",
    "notebook.defaultFormatter": "ms-python.black-formatter",
    "python.testing.pytestArgs": [
        ".",
        "--doctest-modules"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "makefile.configureOnOpen": false,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true ,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "isort.args": [
        "--profile",
        "black"
    ],
    "editor.detectIndentation": false,
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#51535a",
        "activityBar.background": "#51535a",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#301017",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799",
        "sash.hoverBorder": "#51535a",
        "statusBar.background": "#393a3f",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#51535a",
        "statusBarItem.remoteBackground": "#393a3f",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "titleBar.activeBackground": "#393a3f",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#393a3f99",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#393a3f",
    "editor.codeActions.triggerOnFocusChange": true,
    "editor.codeActionsOnSave": {},
      "todo-tree.general.tags": ["CODE_REVIEW"],
    "todo-tree.filtering.useBuiltInExcludes": "file and search excludes",
    "search.exclude": {
        "**/*.html": true,
        "docs//**": true
    },
    "todo-tree.ripgrep.ripgrepArgs": [
        "--glob=!**/*.html",
        "--glob=!**/docs/_generated/**"
    ],
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.diagnosticMode": "workspace",
    "workbench.editorAssociations": {
        "*.html": "livePreview"
    }    
}
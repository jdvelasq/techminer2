{
  "name": "techminer2",
  "displayName": "techminer2",
  "description": "TechMiner2++ extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },

  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "activityBarContainer",
          "title": "TechMiner2++",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "activityBarContainer": [
        {
          "id": "activityBarView",
          "name": "",
          "contextualTitle": "",
          "type": "tree"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.commandWithInput",
        "title": "Command with Input"
      },
      {
        "command": "extension.commandWithoutInput",
        "title": "Command without Input"
      },
      {
          "command": "extension.openPaperAnalysis",
          "title": "Open Paper Analysis"
      }
    ]
  },


  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
